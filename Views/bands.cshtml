@{
  Layout="Shared/_Layout.cshtml";
}
@if (@Model.Count == 0)
{
  <p>No bands have been added yet!</p>
}
else
{
  <h1>Here are the bands we track:</h1>
  <ul>
    @foreach (var band in Model)
    {
      <li><a href='/band/@band.GetId()'>@band.GetBandName()</a></li>
    }
  </ul>

}
<br>
<p><a href="/bands/new">Track a new band</a></p>
