@{
  Layout="Shared/_Layout.cshtml";
}

<h2>Search for a Venue</h2>
<form action="/venues/search" method="post">
  <label for="venue-search-location">Search for Venues By City: </label>
  <input type="text" name="venue-search-location">
  <button type="submit" name="button" class="btn btn-info">Search</button>
</form>

<ul>
  @if (Model.Count != 0)
  {
    @foreach (var venue in Model)
    {
      <li><a href="/venue/@venue.GetId()">@venue.GetVenueName()</a></li>
    }
  }
  else
  {
    <li>There is no venue in that city OR no venues have been added yet! <a href="/venues/new">Add a venue for this city</a></li>
  }
</ul>
